<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/toolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_4"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/view_space_10"
            android:src="@drawable/back_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="会员备案"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/line_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_below="@+id/toolbar_ll"
        android:background="@color/diver_bg" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_ll"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/view_space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/company_cb"
                    android:padding="@dimen/view_space_8"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/view_space_10"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_check"
                    android:checked="true"
                    android:text="企业"
                    />
                <RadioButton
                    android:padding="@dimen/view_space_8"
                    android:id="@+id/personal_cb"
                    android:layout_marginLeft="@dimen/view_space_18"
                    android:layout_width="wrap_content"
                    android:paddingLeft="@dimen/view_space_10"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@drawable/selector_check"
                    android:checked="false"
                    android:text="个人"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/view_space_22"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="企业名称（个人姓名）"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size_16"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/text_size_16"></TextView>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/user_name_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_40"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/colorWhite"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/assist_text"
                        android:textCursorDrawable="@drawable/shape_common_cursor"
                        android:textSize="@dimen/text_size_16" />


                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_size_0.5"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/primary_divider"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/type_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/view_space_22"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="企业类别"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size_16"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/text_size_16"></TextView>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/business_category_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_40"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/colorWhite"
                        android:focusable="false"
                        android:focusableInTouchMode="true"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/assist_text"
                        android:textCursorDrawable="@drawable/shape_common_cursor"
                        android:textSize="@dimen/text_size_16" />


                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_size_0.5"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/primary_divider" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/view_space_12"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/view_space_22"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="经营区域"
                            android:textColor="@color/color_9"
                            android:textSize="@dimen/text_size_16"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/view_space_12"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/text_size_16"></TextView>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/operating_area_et"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_40"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/colorWhite"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/assist_text"
                        android:textCursorDrawable="@drawable/shape_common_cursor"
                        android:textSize="@dimen/text_size_16" />


                    <View xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_size_0.5"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@color/primary_divider" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/business_license_rl"
                    android:layout_marginLeft="@dimen/view_space_42"
                    android:layout_marginTop="@dimen/view_space_22"
                    android:layout_marginRight="@dimen/view_space_42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/business_license_iv"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_default"
                        android:layout_height="@dimen/view_height_160">
                    </androidx.appcompat.widget.AppCompatImageView>
                    <TextView
                        android:id="@+id/tips_tv"
                        android:layout_below="@+id/business_license_iv"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/view_space_4"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorRed"
                        android:text="@string/more_5m_photos_upload_slowly_please_be_patient"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:layout_below="@+id/tips_tv"
                        android:id="@+id/up_business_license_iv_bt"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_44"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginTop="@dimen/view_space_8"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@drawable/selector_login_btn"
                        android:text="上传营业执照"
                        android:enabled="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/businessLicense_person_rl"
                    android:layout_marginLeft="@dimen/view_space_42"
                    android:layout_marginTop="@dimen/view_space_22"
                    android:layout_marginRight="@dimen/view_space_42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/id_card_iv1"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_default"
                        android:layout_height="@dimen/view_height_160">
                    </androidx.appcompat.widget.AppCompatImageView>
                    <TextView
                        android:id="@+id/tips_tv1"
                        android:layout_below="@+id/id_card_iv1"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/view_space_4"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorRed"
                        android:text="@string/more_5m_photos_upload_slowly_please_be_patient"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:layout_below="@+id/tips_tv1"
                        android:id="@+id/up_idcard_iv_bt"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_44"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginTop="@dimen/view_space_8"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@drawable/selector_login_btn"
                        android:text="上传个人身份证照片"
                        android:enabled="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/personal_rl"
                    android:layout_marginLeft="@dimen/view_space_42"
                    android:layout_marginTop="@dimen/view_space_22"
                    android:layout_marginRight="@dimen/view_space_42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/id_card_iv2"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_default"
                        android:layout_height="@dimen/view_height_160">
                    </androidx.appcompat.widget.AppCompatImageView>
                    <TextView
                        android:id="@+id/tips_tv2"
                        android:layout_below="@+id/id_card_iv2"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/view_space_4"
                        android:textSize="@dimen/text_size_12"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorRed"
                        android:text="@string/more_5m_photos_upload_slowly_please_be_patient"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:layout_below="@+id/tips_tv2"
                        android:id="@+id/up_idcard_iv_bt2"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/view_height_44"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/view_space_22"
                        android:layout_marginTop="@dimen/view_space_8"
                        android:layout_marginRight="@dimen/view_space_22"
                        android:background="@drawable/selector_login_btn"
                        android:text="上传个人身份证照片"
                        android:enabled="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_size_16" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_space_24"
                android:orientation="vertical">

                <Button
                    android:id="@+id/confirm_record_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_height_44"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/view_space_22"
                    android:layout_marginRight="@dimen/view_space_22"
                    android:background="@drawable/selector_login_btn"
                    android:text="确定备案"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_space_40">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>