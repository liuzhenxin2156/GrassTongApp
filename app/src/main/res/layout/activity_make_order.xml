<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/toolbar_ll"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/view_space_4"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/view_space_10"
            android:src="@drawable/back_iv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单式生产"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>
    <RelativeLayout
        app:layout_constraintTop_toBottomOf="@+id/toolbar_ll"
        android:id="@+id/line_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size_0.5"
        android:layout_below="@+id/toolbar_ll"
        android:background="@color/diver_bg" />


    <com.kunminx.linkage.LinkageRecyclerView
        android:id="@+id/linkage"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/view_space_8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_48">


            <Button
                android:id="@+id/want_buy_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_space_40"
                android:layout_marginLeft="@dimen/view_space_20"
                android:layout_marginRight="@dimen/view_space_8"
                android:layout_weight="1"
                android:background="@drawable/commit_bg"
                android:text="远期订单预定"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_16"></Button>

            <Button
                android:id="@+id/want_sell_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/view_space_40"
                android:layout_marginLeft="@dimen/view_space_8"
                android:layout_marginRight="@dimen/view_space_20"
                android:layout_weight="1"
                android:background="@drawable/sure_signature_bg"
                android:text="远期订单售卖"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_16">

            </Button>
    </LinearLayout>

</LinearLayout>